# Variables de entorno para el Sistema de Útiles Escolares
# Copia este archivo a .env y configura con tus valores reales

# Configuración del servidor
NODE_ENV=development
PORT=5000

# Base de datos MongoDB
MONGODB_URI=mongodb://localhost:27017/school-supply-system

# JWT (JSON Web Tokens) - CAMBIAR EN PRODUCCIÓN
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=30d

# URL del Frontend
FRONTEND_URL=http://localhost:3000

# Configuración de Email (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=no-reply@school-supply-system.com

# Configuración de la aplicación
APP_NAME=Sistema de Útiles Escolares
APP_VERSION=1.0.0

# Configuración de archivos
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# URLs de redes sociales (opcionales)
FACEBOOK_APP_ID=your_facebook_app_id
TWITTER_HANDLE=@your_handle

# Configuración de seguridad
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Base de datos para testing (opcional)
MONGODB_URI_TEST=mongodb://localhost:27017/school-supply-system-test
